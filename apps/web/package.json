{
  "name": "@repo/web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "dev": "next dev",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "start": "next start",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf .next",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "turbo": {
    "inputs": {
      "build": [
        "src/**/*",
        "public/**/*",
        "next.config.js",
        "tailwind.config.ts",
        "tsconfig.json"
      ],
      "dev": [
        "src/**/*",
        "public/**/*",
        "next.config.js",
        "tailwind.config.ts",
        "tsconfig.json"
      ],
      "lint": [
        "src/**/*",
        "eslint.config.js",
        "tsconfig.json"
      ],
      "type-check": [
        "src/**/*",
        "tsconfig.json",
        "next-env.d.ts"
      ],
      "storybook": [
        "src/**/*",
        "**/*.stories.{ts,tsx}",
        "**/storybook/**/*",
        "tailwind.config.ts"
      ],
      "build-storybook": [
        "src/**/*",
        "**/*.stories.{ts,tsx}",
        "**/storybook/**/*",
        "tailwind.config.ts"
      ]
    }
  },
  "dependencies": {
    "@repo/ui": "workspace:*",
    "next": "catalog:",
    "react": "catalog:",
    "react-dom": "catalog:"
  },
  "devDependencies": {
    "@eslint/eslintrc": "catalog:",
    "@next/eslint-plugin-next": "catalog:",
    "@repo/config": "workspace:*",
    "@repo/tsconfig": "workspace:*",
    "@storybook/addon-links": "catalog:",
    "@storybook/nextjs-vite": "catalog:",
    "@storybook/react": "catalog:",
    "@tailwindcss/postcss": "catalog:",
    "@types/node": "^20.11.0",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "@typescript-eslint/eslint-plugin": "catalog:",
    "@typescript-eslint/parser": "catalog:",
    "autoprefixer": "catalog:",
    "eslint": "catalog:",
    "eslint-config-next": "catalog:",
    "eslint-config-prettier": "catalog:",
    "postcss": "catalog:",
    "storybook": "catalog:",
    "tailwindcss": "catalog:",
    "typescript": "catalog:"
  }
}
