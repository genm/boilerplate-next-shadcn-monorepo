{
  "extends": "@repo/tsconfig/react-library.json",
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["vitest/globals", "@testing-library/jest-dom"]
  },
  "include": [
    "src",
    "eslint.config.js",
    ".eslintrc.js",
    ".storybook/**/*",
    "tailwind.config.js",
    "tsup.config.ts",
    "vitest.config.ts",
    "vite.config.ts"
  ],
  "exclude": ["dist", "node_modules", "storybook-static"]
}
