{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local",
    "**/.env",
    "**/pnpm-lock.yaml",
    "**/package.json",
    "**/next.config.js",
    "**/tailwind.config.js",
    "**/tsconfig*.json"
  ],
  "globalEnv": ["NODE_ENV", "NEXT_PUBLIC_*", "STORYBOOK_*", "VITE_*"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**",
        "storybook-static/**"
      ],
      "inputs": [
        "src/**/*",
        "**/*.{ts,tsx,js,jsx,json}",
        "**/package.json",
        "**/tsconfig*.json",
        "**/next.config.js",
        "**/tailwind.config.js"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "inputs": [
        "src/**/*",
        "**/*.{ts,tsx,js,jsx,json}",
        "**/package.json",
        "**/tsconfig*.json",
        "**/next.config.js",
        "**/tailwind.config.js"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "inputs": [
        "**/*.{ts,tsx,js,jsx}",
        "**/eslint.config.js",
        "**/.eslintrc*",
        "**/package.json"
      ],
      "outputs": ["eslint-report.json"]
    },
    "lint:fix": {
      "dependsOn": ["^lint:fix"],
      "inputs": [
        "**/*.{ts,tsx,js,jsx}",
        "**/eslint.config.js",
        "**/.eslintrc*",
        "**/package.json"
      ]
    },
    "test": {
      "dependsOn": ["^test"],
      "inputs": [
        "src/**/*",
        "**/*.{test,spec}.{ts,tsx,js,jsx}",
        "**/vitest.config.ts",
        "**/vite.config.ts",
        "**/package.json",
        "**/tsconfig*.json"
      ],
      "outputs": ["coverage/**", "test-results/**"]
    },
    "test:watch": {
      "cache": false,
      "persistent": true,
      "inputs": [
        "src/**/*",
        "**/*.{test,spec}.{ts,tsx,js,jsx}",
        "**/vitest.config.ts",
        "**/vite.config.ts",
        "**/package.json",
        "**/tsconfig*.json"
      ]
    },
    "type-check": {
      "dependsOn": ["^type-check"],
      "inputs": ["**/*.{ts,tsx}", "**/tsconfig*.json", "**/package.json"]
    },
    "clean": {
      "cache": false
    },
    "storybook": {
      "cache": false,
      "persistent": true,
      "inputs": [
        "src/**/*",
        "**/*.stories.{ts,tsx,js,jsx}",
        "**/package.json",
        "**/tsconfig*.json",
        "**/tailwind.config.js"
      ]
    },
    "build-storybook": {
      "dependsOn": ["^build-storybook"],
      "inputs": [
        "src/**/*",
        "**/*.stories.{ts,tsx,js,jsx}",
        "**/package.json",
        "**/tsconfig*.json",
        "**/tailwind.config.js"
      ],
      "outputs": ["storybook-static/**"]
    }
  }
}
